<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous" />
  <link rel="stylesheet" href="../css/style.css" />
  <title>Main page</title>
</head>

<body>
  <div class="container">
    <div class="row">
      <div class="col-lg col-md-3 col-sm-2"></div>

      <div class="col-lg col-md-6 col-sm-8">
        <div class="row chat-header">
          <h6 class="mt-1"><a href="/main" class="mr-3 ml-3"><</a> # Public</h6>
        </div>

        <div class="row chat-container p-4">
          <div class="chat-messages"></div>
        </div>
        
        <div class="row chat-footer">
            <form id="chatForm">
              <div class="input-container">
                <input class="mr-1 ml-1" id="msg" type="text" placeholder="Enter message" required autocomplete="off" />
                  <button type="submit" class="btn btn-info btn-block" id="submitBtn"> > </button>
              </div>
            </form>
        </div>

        <!-- use only for passing the username -->
        <input id="username-data" value="<%= username %>" style="display: none;"/>

      </div>

      <div class="col-lg col-md-3 col-sm-2"></div>
    </div>
  </div>

</body>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
  integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
  integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
  integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js"></script>

<script>
  const socket = io('http://localhost:5000');

  const chatMessages = $('.chat-messages');
  const msgEle = $('#msg');
  const username = $('#username-data');

  function outputMessage(message) {
    const msg = document.createElement('div');
    msg.classList.add('message');
    msg.innerHTML = `<p class="meta mb-1"> ${message.username} <span class="ml-3"> ${message.timestamp} </span></p> <p class="text"> ${message.message} </p>`;
    chatMessages.append(msg);
  }

  function addZero(i) {
    if (i < 10) {
      i = "0" + i;
    }
    return i;
  }

  function getTimeStamp() {
    let d = new Date();
    let h = addZero(d.getHours());
    let m = addZero(d.getMinutes());
    return (h + ":" + m);
  }

  function loadMessages(){
    fetch('/messages/public', {
      method: 'GET',
      headers: {
        'Content-Type': 'application/json',
      },
    })
      .then((messages) => {
        return messages.json();
      })
      .then((json) => {
        json.forEach((message) => {outputMessage(message)});
      })
      .catch((e) => {console.log(e)});
  }

  socket.emit('joinRoom', 'public');

  socket.on('displayHistoricalMsg', () => {
    loadMessages();
  });

  socket.on('output', (newMsg) => {
        outputMessage(newMsg);
  });

  // input new Message
  $('#submitBtn').on('click', (element) => {
    element.preventDefault();

    let newMsg = {
      // TODO: get username
      username: username.val(), 
      timestamp: getTimeStamp(), 
      message: msgEle.val()
    };

    fetch('/messages/public', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(newMsg),
    })
    .then(() => {
      socket.emit('input', newMsg);
      msgEle.val('');
    })
    .catch((e) => {console.log(e)});
  });

</script>
</html>